<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/layout_activity_pets"
    tools:context=".PetsActivity">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_pet"/>



    <Button
        android:id="@+id/button_add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/button_add_pet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_circular_pets"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_fetching_pets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_fetching_pets"
        />

    <ListView
        android:id="@+id/list_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_pet_name"/>



</LinearLayout>