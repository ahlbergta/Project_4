<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_dialog_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/dialog_delete_confirmation"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccountDeletion"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:id="@+id/text_dialog_deletion"
        android:text="@string/dialog_deletion_text"
        android:textSize="30sp"
        android:textColor="@color/colorAccountDeletion"
        />

    <Button
        android:id="@+id/cancel_deletion_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bungee_shade"
        android:text="@string/dialog_cancel" />

    <Button
        android:id="@+id/dialog_deletion_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bungee_shade"
        android:text="@string/dialog_confirm" />

</LinearLayout>